}

<!-- Banner -->
<section id="banner">
    <div class="content">
        <header>
            <h2><img src="~/images/RDocs logowhite no back-300.png" /></h2>
            <p>&nbsp;</p>
            <h3>Tecnología Cognitiva de Contenido</h3>
